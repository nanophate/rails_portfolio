<div class="d-flex align-items-center">
    <h1>掲示板一覧</h1>
    <div class="ml-auto boards__linkBox">
        <%= link_to '新規作成', new_engapp_path, class: 'btn btn-outline-dark' %>
    </div>
</div>
<% if flash[:notice] %>
<div class="alert alert-danger flash"><%= flash[:notice] %></div>
<% end %>
<table class="table table-hover boards__table">
    <thead class="thead-dark">
        <tr>
            <th>ID</th>
            <th>作成者</th>
            <th>タイトル</th>
            <th>本文</th>
            <th>作成日時</th>
            <th>更新日時</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        <% @engapps.each do |engapp| %>
        <tr>
            <td><%= engapp.id %></td>
            <td><%= engapp.author %></td>
            <td><%= engapp.title %></td>
            <td><%= engapp.body %></td>
            <td><%= engapp.created_at.to_s(:datetime_jp) %></td>
            <td><%= engapp.updated_at.to_s(:datetime_jp) %></td>
            <td><%= link_to '詳細', engapp_path(engapp.id), class: 'btn btn-outline-dark' %></td>
            <td><%= link_to '削除', engapp_path(engapp.id), class: 'btn btn-outline-dark', method: :delete %></td>
        </tr>
        <% end %>
    </tbody>
</table>
<%= paginate @engapps %>